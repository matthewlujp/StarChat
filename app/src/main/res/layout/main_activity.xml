<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="jp.ac.u_tokyo.constellationmatching.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    android:background="@drawable/background1"
    android:weightSum="1">



    <ImageView
        android:id="@+id/orionImage"
        android:layout_width="275dp"
        android:layout_height="260dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/orion"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/dracoImage"
        android:layout_width="275dp"
        android:layout_height="260dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/draco"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/swanImage"
        android:layout_width="275dp"
        android:layout_height="260dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/swan"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/dummyImage"
        android:layout_width="275dp"
        android:layout_height="260dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/startChatButton"
        android:layout_width="138dp"
        android:layout_height="79dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/chat4"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/chatPartnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

</LinearLayout>


